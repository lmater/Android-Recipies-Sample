<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mt2sconnect.recipes.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/background_6"
            android:scaleType="fitXY"
            />

    </FrameLayout>

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical|fill_horizontal|center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="40dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/likes_folder"
            android:layout_gravity="left"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/cook"
            android:layout_gravity="right"
            android:background="@null"/>

        <TextView
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:text="المفضلة"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="14pt" />


        <TextView
            android:id="@+id/textView1"
            android:layout_gravity="center_horizontal"
            android:text="الوصفات"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="14pt" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/facebook_like"
            android:layout_gravity="left"
            android:background="@null" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/android"
            android:layout_gravity="right"
            android:background="@null"/>


        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:text="قيم التطبيق"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="14pt" />


        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:text="أعمالنا"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="14pt" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/android_os"
            android:layout_gravity="left"
            android:background="@null" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/mailbox"
            android:layout_gravity="right"
            android:background="@null" />


        <TextView
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:text="حول التطبيق"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="14pt" />


        <TextView
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal"
            android:text="راسلنا"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="14pt" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
