<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mt2sconnect.recipes.RecipeActivity"
    tools:showIn="@layout/activity_recipe">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
            android:paddingTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingRight="32dp"
            android:layout_weight="8"
            android:singleLine="true"
            android:gravity="center"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="  المكونات"
            android:textStyle="bold"
            android:drawableRight="@mipmap/ingredients"
            android:textSize="14pt"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/ingredient"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="#d0030303" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adsZoneBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-4178605509245433/7880371513">
    </com.google.android.gms.ads.AdView>


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingRight="32dp"
    android:layout_alignParentLeft="true"
    android:layout_weight="8"
    android:singleLine="true"
    android:gravity="center"
    android:layout_gravity="right"
    android:textColor="#000"
    android:text="  طريقة التحضير"
    android:textStyle="bold"
    android:drawableRight="@mipmap/mixer_1"
    android:textSize="14pt"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/howTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="9pt"
        android:textStyle="bold"
        android:textColor="#d0030303"/>
</LinearLayout>

</android.support.v4.widget.NestedScrollView>
